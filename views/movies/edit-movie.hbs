<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar {{editMovie.title}}</h1>

            <hr>

            <form action="/movies/{{editMovie.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{editMovie.title}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genero</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{editMovie.genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Resumen</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{editMovie.plot}}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Reparto:</label>
                    <select id="cast" class="form-select" name="cast">
                        {{#each editCeleb}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Guardar edición</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>

            <hr>

        </div>
    </div>

</div>