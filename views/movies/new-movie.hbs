<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create new movie</h1>

            <hr>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genero</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Casting</label>
                    <select id="cast" class="form-select" name="cast">
                        {{#each newCelebritie}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Crear nueva pelicula</button>
                <a href="/" class="btn btn-dark">Volver al inicio</a>
            </form>


            <hr>


        </div>
    </div>


</div>